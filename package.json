{
  "name": "little",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "main": "public/electron.js",
  "dependencies": {
    "@popperjs/core": "^2.11.4",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^4.19.3",
    "babel-plugin-import": "^1.13.3",
    "bootstrap": "^5.1.3",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "glob": "^7.2.0",
    "highlight.js": "^11.5.0",
    "markdown-it": "^12.3.2",
    "popper.js": "^1.16.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "5.3.0",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"yarn run client\" \"wait-on http://localhost:3000 && yarn run electron:watch\" ",
    "build": "yarn run build-client && yarn run build-electron",
    "client": "set BROWSER=none && react-app-rewired start",
    "electron:watch": "cross-env NODE_ENV=development nodemon --watch public/electron.js --exec electron .",
    "electron": "electron .",
    "build-client": "react-app-rewired build",
    "build-electron": "electron-builder build -w",
    "build-mac": "electron-builder --mac",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "productName": "Little",
    "files": [
      "build/",
      "electron.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^17.2.0",
    "electron-builder": "21.2.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "nodemon": "^2.0.15",
    "react-app-rewired": "^2.2.1"
  }
}
